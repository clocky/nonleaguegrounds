{% macro creativeCommons(image) %}
  {% if image.license %}
    <div class="level-item has-background-grey-bis">
      {% set type = image.license.split("/")[4] | upper %}
      {% set version = image.license.split("/")[5] | upper %}
      {% set cc = type.split("-") %}
      <p class="is-size-7">
        <span>
          <i class="fab fa-creative-commons"></i>
          {% for c in cc %}
            <i class="fab fa-creative-commons-{{ c | lower }}"></i>
          {% endfor %}
        </span>
        <span>
          <a href="{{ image.license }}" class="has-text-black has-text-weight-semibold">CC-{{ type }}-{{ version }}</a>
        </span>
        /
        <span>
          <a href="https://www.flickr.com/photos/{{ image.creator.identifier }}/{{ image.identifier }}" class="has-text-danger">{{ image.creator.name }}</a> 
        </span>
      </p>
    </div>
  {% endif %}
{% endmacro %}