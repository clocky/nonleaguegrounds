{%- macro staticmap(address, maptype, zoom, width, height, format, scale, key) -%}
    https://maps.googleapis.com/maps/api/staticmap?center={{address | striptags}}&maptype={{maptype}}&zoom={{zoom}}&scale={{scale}}&size={{width}}x{{height}}&format={{format}}&key={{key}}
{%- endmacro -%}

{% macro hero(title, subtitle = "", id = "") %}
    <header class="hero has-background-grey-light is-medium" id="{{ id }}">
        <div class="hero-body">
            <div class="container">
                <h1 class="title has-text-white-bis has-background-black is-inline-block px-3 py-2">{{ title | safe}}</h1>
                {% if subtitle != "" %}
                    <div class="columns">
                        <div class="column is-one-third">
                            <h2 class="subtitle has-text-white-ter has-background-black is-hidden-mobile px-3 py-2">
                                {{ subtitle }}
                            </h2>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </header>
{% endmacro %}

{% macro card(img, title, subtitle) %}
    <div class="card">
        <div class="card-image">
            <figure class="image is-4by3">
                <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
            </figure>
        </div>
        <div class="card-content">
            <div class="media">
                <div class="media-left">
                    <figure class="image is-48x48">
                        <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                    </figure>
                </div>
                <div class="media-content">
                    <p class="title is-4">John Smith</p>
                    <p class="subtitle is-6">@johnsmith</p>
                </div>
            </div>

            <div class="content">
      Lorem ipsum dolor sit amet, consectetur adipiscing elit.
      Phasellus nec iaculis mauris. <a>@bulmaio</a>.
      <a href="#">#css</a>
                <a href="#">#responsive</a>
                <br>
                <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>
            </div>
        </div>
    </div>
{% endmacro %}

{%- macro fc(club, abbr = false) -%}
    {%- if club.slice(0, 3) == "AFC" -%}
        {%- if abbr -%}
            <abbr title="Association Football Club">A.F.C.</abbr>
        {%- else -%}
            AFC
        {%- endif -%}
        {{ club.slice(3) }}
    {%- elseif club.slice(-3) == "AFC" -%}
        {{ club.slice(0,-3) }}
        {%- if abbr -%}
            <abbr title="Association Football Club">A.F.C.</abbr>
        {%- else -%}
            AFC
        {%- endif -%}
    {%- elseif club.slice(0, 2) == "FC" -%}
        {%- if abbr -%}
            <abbr title="Football Club">F.C.</abbr>
        {%- else -%}
        FC
        {%- endif -%}
        {{ club.slice(2) }}
    {%- else -%}
        {{ club }}
        {%- if abbr %}
            <abbr title="Football Club">F.C.</abbr>
        {%- else %}
        FC
        {%- endif -%}
    {%- endif -%}
{%- endmacro -%}

