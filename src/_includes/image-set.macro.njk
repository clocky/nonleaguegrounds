{%- macro imageSet(id) %}
header {
  background-image: url(/img/{{ meta.hero[id].src }}.jpg);
  background-image: -webkit-image-set(
    url("/img/{{ meta.hero[id].src }}.avif") 1x,
    url("/img/{{ meta.hero[id].src }}.jpg") 1x
  );
  
  background-image: image-set(
    url("/img/{{ meta.hero[id].src }}.avif") 1x,
    url("/img/{{ meta.hero[id].src }}.jpg") 1x
  );
}
{%- endmacro %}