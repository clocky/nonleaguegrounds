{% macro hero(title, subtitle, img, alt) %}
    <section class="hero is-medium is-dark has-background">
        <img class="hero-background is-transparent" src="{{ img | trim }}" alt="{{ alt | trim }}">
        <div class="hero-body">
            <div class="container is-max-desktop">
                <div class="columns">
                    <div class="column is-two-thirds">
                        <h1 class="title is-size-1 is-size-2-tablet is-size-3-mobile has-text-weight-bold has-text-left">
                            {{ title }}
                        </h1>
                        <p class="subtitle is-size-4 is-size-5-tablet is-size-6-mobile has-text-left">
                            {{ subtitle }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endmacro %}