<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" href="/css/maps.css">
        <meta name="description" content="{% if description %}{{ description | safe }}{% else %}{{ meta.description | safe }}{% endif %}">
        <title>
            {% if title %}{{ title }}{%else%}{{ meta.title }}{%endif%}
            </title>
            <link rel="icon" href="/favicon.ico" sizes="any">
            <link rel="apple-touch-icon" href="/apple-touch-icon.png">
            <link rel="manifest" href="/site.webmanifest">
        </head>
        <body>
            <div class="container">
                <nav>
                    <ul>
                        <li>
                            <strong>
                                <a href="/">non<wbr>league<wbr>grounds<wbr>.com</a>
                            </strong>
                        </li>
                    </ul>
                    <ul>
                        <li>
                            <a href="/grounds/">
                                <span class="emoji">üèüÔ∏è</span> Grounds</a>
                        </li>
                        <li>
                            <a href="/clubs/">
                                <span class="emoji">‚öΩ</span> Clubs</a>
                        </li>
                        <li>
                            <a href="/leagues/">
                                <span class="emoji">üèÜ</span> Leagues</a>
                        </li>
                    </ul>
                </nav>
            </div>
            {{ content | safe }}
            <footer class="container-fluid" data-theme="dark">
                <div class="container">
                    <div class="grid">
                        <p>
                            {{ meta.description }}
                        </p>
                        <div>
                            <strong>Leagues</strong>
                            <ul>
                                {% for league in leagues %}
                                    <li>
                                        <small>
                                            <a href="/leagues/{{ league.name | slugify }}/">{{ league.name }}</a>
                                        </small>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% for region in regions | batch(5) %}
                            <div>
                                {% if loop.first %}
                                    <strong>Regions</strong>
                                {% else %}
                                    <strong>&nbsp;</strong>
                                {% endif %}
                                <ul>
                                    {% for region in region %}
                                        <li>
                                            <small>
                                                <a href="/grounds/{{ region.name | slugify }}/">{{ region.name }}</a>
                                            </small>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </footer>
        </body>
    </html>