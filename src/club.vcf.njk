---
pagination:
    data: clubs
    size: 1
    alias: club
permalink: "/clubs/{{ club.name | slugify }}.vcf"
---
BEGIN:VCARD
VERSION:3.0
ORG: {{ club.alternateName | safe }}
NICKNAME: {{ club.slogan }}
BDAY: ----{{ club.foundingDate.@value | date("YYYY")}}
item1.ADR;type=WORK;type=pref:;;{{ club.location.name }};{{ club.location.address.streetName }};{{ club.location.address.addressLocality | upper }};{{ club.location.address.addressRegion }};{{ club.location.address.postalCode }};United Kingdom
item1.X-ABADR:gb
{% if club.twitter -%}X-SOCIALPROFILE;type=twitter:http://twitter.com/{{ club.twitter | lower }}
{% endif -%}
{% if club.id -%}
LOGO;VALUE=URI;TYPE=PNG:https://media.api-sports.io/football/teams/{{club.id}}.png
{% endif -%}
{% if club.url -%}
item2.URL;type=pref:{{club.url}}
item2.X-ABLabel:_$!<HomePage>!$_
{% endif -%}
SOURCE:{{ meta.base }}/downloads/{{ club.name | slugify }}.vcf
END:VCARD