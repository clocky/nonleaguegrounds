layout: base.njk
permalink: /league/index.html
eleventyComputed:
    title: "Football Conference Leagues"
    description: "A directory of {{ leagues.length }} leagues in the English football conference, sorted by tier."
---

<header class="container-fluid hero" id="trophy" data-theme="dark">
    <div class="container">
        <h1>Leagues</h1>
        <div class="grid">
            <h5>A directory of {{ leagues.length }} leagues in the English football conference, sorted by tier</h5>
            <p></p>
        </div>
    </div>
</header>

<main class="container">

    <table role="grid">
        <thead>
            <tr>
                <th scope="col">Tier</th>
                <th scope="col">Name</th>
                <th scope="col">Clubs</th>
            </tr>
        </thead>
        <tbody>
            {% for league in leagues | sort(attribute = "tier")%}
                <tr>
                    <td>
                        {{ league.tier | ordinal }}
                    </td>
                    <th>
                        <a href="/league/{{ league.name | slugify }}/">
                            {{ league.sponsor }}
                            {{ league.name}}
                        </a>
                    </th>
                    <td>
                        {{ league.clubs | length }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</main>

