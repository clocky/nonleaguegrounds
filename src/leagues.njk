---
layout: base.njk
permalink: /leagues/index.html
eleventyComputed:
    title: "Football Conference Leagues"
    description: "A directory of {{ leagues.length }} leagues in the English football conference, sorted by tier."
---
{% from "breadcrumb.macro.njk" import breadcrumb %}

<header class="container-fluid hero" id="trophy" data-theme="dark">
    <div class="container">
        <h1>Leagues</h1>
        <div class="grid">
            <p>
                <strong>A directory of {{ leagues.length }} leagues in the English football conference, sorted by tier</strong>
            </p>
            <p></p>
        </div>
    </div>
</header>

{{ breadcrumb("Leagues")}}

<main class="container">

    <table role="grid">
        <thead>
            <tr>
                <th scope="col">Tier</th>
                <th scope="col">Name</th>
                <th scope="col">Clubs</th>
            </tr>
        </thead>
        <tbody>
            {% for league in leagues | sort(attribute = "tier")%}
                <tr>
                    <td>
                        {{ league.additionalProperty.@value | ordinal }}
                    </td>
                    <th>
                        <a href="/leagues/{{ league.name | slugify }}">
                            {{ league.alternateName}}
                        </a>
                    </th>
                    <td>
                        {{ league.members | length }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</main>

<footer class="container">
    <small>
