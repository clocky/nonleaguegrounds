{% from "macros.njk" import hero %}

{{ hero ("Leagues", "A directory of " + leagues.length + " leagues in the English football conference, sorted by tier", "trophy")}}

<main>
    <section class="section">
        <table class="table is-striped is-fullwidth">
            <thead>
                <tr>
                    <th scope="col">Tier</th>
                    <th scope="col">Name</th>
                    <th scope="col">Clubs</th>
                </tr>
            </thead>
            <tbody>
                {% for league in leagues | sort(attribute = "tier")%}
                    <tr>
                        <td>
                            {{ league.tier | ordinal }}
                        </td>
                        <th>
                            <a href="/league/{{ league.name | slugify }}">
                                {{ league.sponsor }}
                                {{ league.name}}
                            </a>
                        </th>
                        <td>
                            {{ league.clubs | length }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
</main>

