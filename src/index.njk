---
layout: base.njk
---
{% from "macros.njk" import fc,
hero %}

{{ hero(meta.title, meta.description, "league") }}

<main class="container">
    {% for league in leagues %}
        <div class="row">
            <h2>{{ league.name | replace(" ", "\n") | nl2br | safe }}</h2>
            {% for column in league.clubs | batch(6)%}
                <div class="col">
                    {% for team in column %}
                        <li>
                            <a href="/club/{{ team.name | slugify }}/">{{ team.name }}</a>
                        </li>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    {% endfor %}
</main>