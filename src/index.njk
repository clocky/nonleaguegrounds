---
layout: base.njk
---
<header class="container-fluid hero" id="league" data-theme="dark">
    <div class="container">
        <h1>{{ meta.title | replace(" ", "\n") | nl2br | safe}}</h1>
        <div class="grid">
            <p>
                <strong>{{ meta.description }}</strong>
            </p>
            <p></p>
        </div>
    </div>
</header>

<main class="container">
    {% for league in leagues %}
        <h2>{{ league.name | replace(" ", "\n") | nl2br | safe }}</h2>
        <div class="grid">
            {% for column in league.members | batch(6)%}
                <ul>
                    {% for club in column %}
                        <li>
                            <a href="/{{ league.name | slugify }}/{{ club.name | slugify }}">{{ club.name }}</a>
                        </li>
                    {% endfor %}
                </ul>
            {% endfor %}
        </div>
    {% endfor %}
</main>