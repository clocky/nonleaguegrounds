---
permalink: /grounds/index.html
date: git Last Modified
eleventyComputed:
    title: "Football Conference Grounds"
    description: "A directory of {{ grounds.length }} English non-league grounds, sorted by capacity."
---
{% extends "./_layouts/base.njk" %}
{% from "unsplash.macro.njk" import unsplash %}
{% from "hero.macro.njk" import hero %}

{%- block link %}
  <link rel="preload" as="image" href="{{ meta.hero['grounds'].src }}.jpg"/>
  <link rel="canonical" href="{{ meta.base }}/grounds">
{%- endblock %}

{%- block css %}{%- endblock %}

{% block header %}
  {{ hero("Grounds", description, meta.hero['grounds'].src) }}
{% endblock %}

{% block main %}
  <main class="container">
    <table class="{{ meta.class.table }}">
      <thead>
        <tr>
          <th scope="col" class="is-hidden-mobile">Pos</th>
          <th scope="col">Name</th>
          <th scope="col" class="is-hidden-mobile">Club</th>
          <th scope="col">Capacity</th>
        </tr>
      </thead>
      <tbody>
        {% for ground in grounds | sort(attribute = "maximumAttendeeCapacity") | reverse %}
          <tr id="{{ ground.name | slugify }}">
            <td class="is-hidden-mobile">
              {{ loop.index | ordinal }}
            </td>
            <th scope="row">
              <a href="/regions/{{ ground.areaServed.name | slugify }}/{{ ground.name | slugify }}">
                {{ ground.name }}
              </a>
              {%- if env.eleventy == "development" %}
                {%- if not ground.url %}
                  <a class="button is-small" target="_blank" href="https://www.google.com/search?q=%22{{ ground.name | urlencode }}%22+site%3A{{ ground.subOrganization[0].url.slice(8) }}">ground</a>
                  {% if ground.sponsor %}
                    <a class="button is-small" target="_blank" href="https://www.google.com/search?q=%22{{ ground.sponsor.name | urlencode }}%22+site%3A{{ ground.subOrganization[0].url.slice(8) }}">sponsor</a>
                  {% endif %}
                {%- else %}
                  <span class="tag is-success">url</span>
                {%- endif %}
                {%- if not ground.description %}
                  <a class="button is-small" target="_blank" href="https://www.google.com/search?q=%22{{ ground.name | urlencode }}%22+site%3A{{ ground.subOrganization[0].url.slice(8) }}">search site</a>
                {%- else %}
                  <span class="tag is-success">note</span>
                {%- endif %}
              {%- endif %}
            </th>
            <td class="is-hidden-mobile">
              {% for club in ground.subOrganization %}
                <a href="/leagues/{{ club.memberOf.name | slugify }}/{{ club.name | slugify }}" class="secondary">{{ club.name }}</a>
              {% endfor %}
            </td>
            <td>
              {{ ground.maximumAttendeeCapacity | commaNumber }}
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </main>

  {{ unsplash(meta.hero["grounds"]) }}
{% endblock %}