---
permalink: /sitemap.xml
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset
  xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
>
  <url>
    <loc @text="meta.base"></loc>
    <lastmod @text="date(page.date, 'YYYY-MM-DD')"></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.1</priority>
  </url>
  <url webc:for="club of clubs">
    <loc
      @text="`${meta.base}/leagues/${club.memberOf.slug.current}/${club.slug.current}/index.html`"
    ></loc>
    <lastmod @text="date(page.date, 'YYYY-MM-DD')"></lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.5</priority>
  </url>
  <url webc:for="ground of grounds">
    <loc
      @text="`${meta.base}/regions/${slugify(ground.areaServed.name)}/${ground.slug.current}/index.html`"
    ></loc>
    <lastmod @text="date(page.date, 'YYYY-MM-DD')"></lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.5</priority>
  </url>
  <url webc:for="league of leagues">
    <loc
      @text="`${meta.base}/leagues/${league.slug.current}/index.html`"
    ></loc>
    <lastmod @text="date(page.date, 'YYYY-MM-DD')"></lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.3</priority>
  </url>
  <url webc:for="region of regions">
    <loc
      @text="`${meta.base}/regions/${slugify(region.name)}/index.html`"
    ></loc>
    <lastmod @text="date(page.date, 'YYYY-MM-DD')"></lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.3</priority>
  </url>
</urlset>
