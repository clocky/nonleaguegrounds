---
layout: "base.njk"
permalink: "/regions/"
eleventyComputed: 
    title: "Non-League Grounds | Regions"
    description: "A directory of {{ regions.length | toWords }} regions of England and Wales that have non-league grounds."
---
{% from "breadcrumb.macro.njk" import breadcrumb %}
{% from "hero.macro.njk" import hero %}

{{ hero ("Regions", "A directory of " + regions.length | toWords + " regions of the England and Wales that have non-league grounds.", meta.image.regions, "Aerial photography of an unknown area in England showing cities and farmlands.") }}

{{ breadcrumb("Regions") }}

<section class="section" id="{{ region.name | slugify }}">
    <div class="container is-max-desktop">
        {% for regions in regions | sort(attribute = "name") | batch(3) %}
            <div class="columns">
                {% for region in regions %}
                    <div class="column is-one-third">
                        <a href="/grounds/{{ region.name | slugify }}">
                            {%- set slug %}{{- region.name | slugify -}}{%- endset %}
                            {% set img %}{{ meta.image.region[slug] }}{% endset %}
                            <figure class="image is-16by9">
                                <img src="{{ img | url }}" alt="{{ region.name }} non-league football grounds">
                            </figure>
                            <p class="title is-5 mt-3">{{ region.name }}</p>
                            <p class="subtitle is-6">{{ region.geoContains.length }} ground{%- if region.geoContains.length > 1 -%}s{%- endif -%}
                            </p>

                        </a>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
</section>