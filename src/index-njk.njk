---
{% extends "base.njk" %}
{% from "unsplash.macro.njk" import unsplash %}

{%- block link %}
  <link rel="preload" as="image" href="/img/{{ meta.hero['clubs'].src }}.jpg"/>
{%- endblock %}

{%- block css %}
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Rubik+Mono+One:wght@400&display=swap&text={{ meta.title | replace(' ', '') | upper }}");
    header {
      background-image: url("/img/{{ meta.hero['clubs'].src }}.jpg");
    };
  </style>

{%- endblock %}

{% block header %}
  <header class="container-fluid hero" id="clubs" data-theme="dark">
    <div class="container">
      <hgroup>
        <h1>{{ meta.title | replace(" ", "\n") | nl2br | safe}}</h1>
        <h2>{{ meta.description }}</h2>
      </hgroup>
    </div>
  </header>
{% endblock %}

{% block main %}
  <main class="container">
    <section class="grid" id="home">
      <div id="leagues-panel" class="panel">
        <hgroup>
          <h3>Leagues</h3>
          <p>
            From the <strong>{{ leagues[0].name }}</strong> to the 
            <strong>{{ leagues[leagues.length -1].name }}</strong>, 
            a directory of {{ leagues.length }} English football conference leagues.
          </p>
        </hgroup>
        <a href="/leagues/" role="button">View all leagues →</a>
      </div>
      <div id="grounds-panel" class="panel">
        <hgroup>
          <h3>Grounds</h3>
          <p> Leading with the {{ grounds[0].maximumAttendeeCapacity | commaNumber }}-capacity home of <strong>{{ grounds[0].subOrganization[0].name }}</strong>, 
              a list of {{ grounds.length }} English and Welsh non-league grounds.</p>
        </hgroup>
        <a href="/grounds/" role="button">View all grounds →</a>
      </div>
      <div id="regions-panel" class="panel">
        <hgroup>
          <h3>Regions</h3>
          <p>
             From the <strong>North East</strong> to the <strong>South West</strong>, 
              a directory of clubs in the {{ regions.length }} regions of England and Wales
            </p>
        </hgroup>
        <a href="/regions/" role="button">View all regions →</a>
      </div>
    </section>
  </main>
  {{ unsplash(meta.hero["clubs"]) }}
{% endblock %}