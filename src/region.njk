---
layout: base.njk
pagination:
    data: regions
    size: 1
    alias: region
permalink: "/grounds/{{ region.name | slug }}/index.html"
---

{% from "breadcrumb.macro.njk" import breadcrumb %}

{%- set slug %}{{- region.name | slugify -}}{%- endset %}
{% set img %}{{ meta.image.region[slug] }}{% endset %}

{%- set pushpins -%}
{%- for ground in region.geoContains -%}
  {%- if ground.latitude and ground.longitude %}&pp={{- ground.latitude -}},{{- ground.longitude -}};36{%- endif -%}
{%- endfor -%}
{%- endset -%}
{%- set bing = env.bing_maps_api_key -%}

<section class="hero is-medium is-dark has-background">
  {% hero "https://dev.virtualearth.net/REST/v1/Imagery/Map/Aerial?mapSize=1440,335" + pushpins + "&format=png&mapMetadata=0&key=" + bing,
  region.name %}
  <div class="hero-body">
    <div class="container is-max-desktop">
      <div class="columns">
        <div class="column is-two-thirds">
          <h1 class="title is-size-1 is-size-2-tablet is-size-3-mobile has-text-weight-bold has-text-left">
            {{ region.name }}
          </h1>
          <h2 class="subtitle is-size-4 is-size-5-tablet is-size-6-mobile has-text-left">
            {% if region.geoContains.length == 1%}
              One ground, {{ region.geoContains[0].name }}
            {% else %}
              {{ region.geoContains.length | toWords | capitalize }} grounds from
            {{ region.geoContains[0].name }} to {{ region.geoContains[region.geoContains.length - 1].name }}
            {% endif %}
          </h2>
        </div>
      </div>
    </div>
  </div>
</section>

{{ breadcrumb("Grounds", region.name) }}

<script type="application/ld+json">
  {{ region | json | safe }}
</script>

<section class="section" id="{{ region.name | slugify }}">
  <div class="container is-max-desktop">
    {% for grounds in region.geoContains | sort(attribute = "name") | batch(3) %}
      <div class="columns">
        {% for ground in grounds %}
          <div class="column is-one-third">
            <a href="/grounds/{{ region.name | slugify }}/{{ ground.name | slugify }}">
              <figure class="image is-16by9">
                {% aerial ground.latitude,
                ground.longitude,
                ground.name %}
              </figure>
              <h3 class="title is-5 mt-3">{{ ground.name }}</h3>
              <p class="subtitle is-6">{{ ground.subOrganization.name | safe }}</p>
            </a>
          </div>
        {% endfor %}
      </div>
    {% endfor %}
  </div>
</section>