---
layout: base.njk
pagination:
    data: grounds
    size: 1
    alias: ground
permalink: "/{{ ground.areaServed.name | slugify }}/{{ ground.name | slugify }}/index.html"
eleventyComputed:
    title: "{{ ground.name | safe }} | {{ meta.title }}"
    description: "Information about the non-league football ground, {{ ground.name }}, with maps, address and contact information."
---

{% from "macros.njk" import staticmap as google %}
{% from "maps.macro.njk" import bing,
osm,
google,
apple %}

<script type="application/ld+json">
  {{ ground | dump | safe }}
</script>

<header class="container-fluid hero" id="{{ ground.name | slugify }}" data-theme="dark">
  <div class="container">
    <h1>
      {{ ground.name | replace(" ", "\n") | nl2br | safe }}
    </h1>
  </div>
</header>

<main class="container" itemscope itemtype="http://schema.org/StadiumOrArena">
  <div class="grid">
    <section>
      <p>
        <strong itemprop="name">{{ ground.name }}</strong>
        {%- if ground.sponsor %}, officially known as <strong itemprop="alternateName">{{ ground.sponsor.name | safe }}</strong> for sponsorship reasons, {% endif %}
        is an {{ ground.subOrganization[0].sport | lower }} ground in {{ ground.address.addressLocality }}
        {%- if ground.address.addressRegion -%}
        , {{ ground.address.addressRegion }}
        {%- endif %} that holds <span itemprop="maximumAttendeeCapacity">{{ ground.maximumAttendeeCapacity | commaNumber }}</span> people.
      </p>
      {% for club in ground.subOrganization %}
        <p class="block">
          {% if not loop.first %} 
            The ground is shared with 
            {% else %} 
            The ground is the home of
            {% endif %}
          <a href="/{{ club.memberOf.name | slugify }}/{{ club.name | safe | slugify }}">{{ club.alternateName }}</a>, 
            who currently compete in the <a href="/{{ club.memberOf.name | slugify }}">{{ club.memberOf.name }}</a>.</p>
      {% endfor %}
      <h4>Information</h4>
      <table role="grid">
        <tbody>
          <tr>
            <th scope="row">Name</th>
            <td>
              {{ ground.name | safe }}
            </td>
          </tr>
          {% if ground.sponsor %}
            <tr>
              <th scope="row">Sponsor</th>
              <td>
                {{ ground.sponsor.name | safe }}
              </td>
            </tr>
          {% endif %}
          {% if ground.address.streetAddress %}
            <tr>
              <th scope="row">Street</th>
              <td>
                {{ ground.address.streetAddress }}
              </td>
            </tr>
          {% endif %}
          <tr>
            <th scope="row">Town</th>
            <td>
              {{ ground.address.addressLocality | upper }}
            </td>
          </tr>
          <tr>
            <th scope="row">Postcode</th>
            <td>
              {{ ground.address.postalCode | upper }}
            </td>
          </tr>
        </tbody>
      </table>
      {% for club in ground.subOrganization %}
        <a href="/{{ club.memberOf.name | slugify }}/{{ club.name | slugify}}.vcf" role="button" class="outline">Save to address book</a>
      {% endfor %}
      <h4>Nearby grounds</h4>
      <ul>
        {% set count = 0%}
        {% for away in grounds %}
          {% set distance %}
          {% distance ground.latitude,
          ground.longitude,
          away.latitude,
          away.longitude %}
          {% endset %}
          {% if distance < 15 and away.name != ground.name %}
            <li>
              {% for club in clubs %}
                {% if club.location.name == away.name %}
                  <a href="/{{ club.memberOf.name | slugify }}/{{ club.name | slugify }}">{{ club.name }}</a>
                  {% set count = count + 1 %}
                {% endif %}
              {% endfor %} at 
                <a href="/{{ away.areaServed.name | slugify }}/{{ away.name|slugify }}">{{ away.name }}</a>
                ({{ distance | round(1) }} mi)
              </li>
          {% endif %}
        {% endfor %}
        {% if count == 0 %}
          <li>
              No grounds found within a 10 mile radius.
          </li>
        {% endif %}
      </ul>
      <h4>Maps</h4>
      <ul>
        <li>
          <a 
            href="{{ google(ground) }}" 
            rel="noopener"
            target="_blank" 
            aria-label="Open in Google Maps">Google Maps</a>
        </li>
        <li>
          <a 
            href="{{ apple(ground) }}"
            rel="noopener"
            target="_blank" 
            aria-label="Open in Apple Maps">Apple Maps</a>
        </li>
        <li>
          <a 
            href="{{ bing(ground) }}"
            rel="noopener"
            target="_blank" 
            aria-label="Open in Bing Maps">Bing Maps</a>
        </li>
        <li>
          <a 
            href="{{ osm(ground) }}"
            rel="noopener"
            target="_blank" 
            aria-label="Open in Open Street Maps">OpenStreetMap</a>
        </li>
      </ul>
    </section>
    <aside>
      <figure>
        <img src="https://dev.virtualearth.net/REST/v1/Imagery/Map/AerialWithLabels/{{ground.latitude}},{{ground.longitude}}/17?mapSize=600,450&query={{ground.name | urlencode}}&mapLayer=Basemap,Buildings&format=jpeg&mapMetadata=0&key={{ env.bing_maps_api_key }}"  alt="An aerial photograph of {{ ground.name }} in {{ ground.locality }}, {{ ground.region }}.">
        <figcaption>
          <small>Bing Maps view of {{ ground.name }}, {{ ground.address.addressLocality }}</small>
        </figcaption>
      </figure>
    </aside>
  </div>
</main>