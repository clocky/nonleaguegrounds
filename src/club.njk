---
pagination:
    data: clubs
    size: 1
    alias: club
permalink: "/leagues/{{ club.memberOf.name | slugify }}/{{ club.name | slugify }}/index.html"
eleventyComputed:
    title: "{{ club.name | safe }} | {{ meta.title }}"
    description: "Information about {{ club.name }}, a {{club.keywords}} football club."
---
{% extends "./_layouts/base.njk" %}

{% from "aerial.macro.njk" import aerial %}
{% from "breadcrumb.macro.njk" import breadcrumb %}
{% from "creative-commons.macro.njk" import creativeCommons %}
{% from "macros.njk" import staticmap %}

{% block link %}
  <link rel="canonical" href="{{ meta.base }}/leagues/{{ club.memberOf.name | slugify }}/{{ club.name | slugify }}">
{% endblock %}

{% block script %}
  <script type="application/ld+json">
    {{ club | dump | safe }}
  </script>
{% endblock %}

{% block css %}
    {%- if club.owns  %}
    <style>
      section.hero.is-white {
        {% if club.owns.color.length > 1 %}
        background: linear-gradient(90deg, {{ club.owns.color[0].@value }} 0%, {{ club.owns.color[1].@value }} 100%) ! important;
        {% else %}
        background: {{ club.owns.color[0].@value }} ! important;
        {% endif %}
      }
    </style>
    {%- endif %}
{% endblock %}

{% block breadcrumb %}
  {{- breadcrumb("Leagues", club.memberOf.name, club.name) }}
{% endblock %}

{% block header %}
  <section class="hero is-white is-{{ 'small' if club.image else 'small' }} has-background">
    {% if club.image %}
      {% image "./src/_assets/img/flickr/" + club.image.contentUrl, club.name, "100vw", "clubs" %}
    {% endif %}
    <div class="hero-body">
      <div class="container has-text-left">
        <h1 class="title has-background-white is-inline-block has-text-weight-bold {% if club.image or club.owns -%}p-4{% endif %} is-size-2">{{ club.name | replace(" ", "\n") | nl2br | safe }}</h1>
      </div>
    </div>
  </section>
{% endblock %}

{% block actions %}
<section class="container pt-3">
  <div class="level">
    <div class="level-left">
      {% for url in club.sameAs %}
        <div class="level-item">
          {%- set network = url.split("/")[2].split(".")[0] if url.includes("twitter") else url.split("/")[2].split(".")[1] -%}
          {%- set user = url.split("/")[3] -%}
          <a href="{{ url }}" target="_blank" rel="noopener canonical" class="button is-light">
            <span class="icon is-{{ network | lower }}">
              <i class="fab fa-{{ network | lower }}"></i>
            </span>
            <span id="{{ network | lower }}-label">{{ "YouTube" if network == "youtube" else network | capitalize }}</span>
          </a>
        </div>
      {% endfor %}
      {% if club.url %}
        <div class="level-item">
          <a href="{{ club.url }}/" target="_blank" class="button is-text" rel="noopener">
            <span>{{ club.url.slice(8) }}</span>
            <span class="icon is-small">
              <i class="fas fa-arrow-up-right-from-square is-size-7"></i>
            </span>
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</section>
{% endblock %}

{% block main %}
  <main class="container">
    <div class="columns is-variable is-8">
      <article class="column is-three-fifths">
        <p class="block is-size-5">
          <strong>
            {{- club.alternateName -}}
          </strong>
          is an {{ club.sport | lower }} club based in {{ club.location.address.addressLocality }}
          {%- if club.location.address.addressRegion -%}
            , {{ club.location.address.addressRegion }}
          {%- endif %} in {{ club.areaServed.name }}.
        </p>
        <p class="block">
          Founded {{ club.foundingDate | ago }} years ago in {{ club.foundingDate }}, the team currently compete in the
          <a href="/leagues/{{ club.memberOf.name | slugify }}">{{ club.memberOf.sponsor.name }}
            {{ club.memberOf.name }}</a>, 
            {%- if club.memberOf.additionalProperty %}
            the {{ club.memberOf.additionalProperty.@value | ordinal }} tier of English football
            {%- endif %}.
        </p>
        <p class="block">
          They play their home matches at 
          <a href="/regions/{{ club.areaServed.name | slugify }}/{{ club.location.name | slugify }}">{{ club.location.name }}</a>,
          and are nicknamed <strong>"{{ club.slogan }}"</strong>.
        </p>
      </article>

      <aside class="column is-one-fifth">
        <div>
          <h4 class="heading">Nickname</h4>
          <p class="block">{{ club.slogan }}</p>
          <h4 class="heading">Founded</h4>
          <p class="block">
            <time datetime="YYYY">{{ club.foundingDate }}</time>
          </p>
          <h4 class="heading">Ground</h4>
          <p class="block">
            <a href="/regions/{{ club.areaServed.name | slugify }}/{{ club.location.name | slugify }}/">
              {{ club.location.name }}
            </a>
          </p>
        </div>
      </aside>
      <aside class="column is-one-fifth">
        {%- if club.image %}
        <h4 class="heading">Photo Credit</h4>
          {{ creativeCommons(club.image)}}
        {% endif %}
      </aside>
    </div>
  </main>

{% endblock %}
