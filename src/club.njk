---
layout: base.njk
pagination:
    data: clubs
    size: 1
    alias: club
permalink: "/leagues/{{ club.memberOf.name | slugify }}/{{ club.name | slugify }}/index.html"
eleventyComputed:
    title: "{{ club.name }} | {{ meta.title }}"
    description: "Information about {{ club.name }}, a {{club.status}} football club."
---
{% from "breadcrumb.macro.njk" import breadcrumb %}
{% from "hero.macro.njk" import hero %}

<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "SportsTeam",
    "identifier": {
      "@type": "url",
      "@value": "{{ meta.base }}/club/{{ club.name | slugify }}"
    },
    "name": "{{ club.name }}",
    "slogan": "{{ club.slogan }}",
    "alternateName": "{{ club.alternateName }}",
    {%- if club.url %}
      "url": "{{ club.url }}",
    {%- endif %}
    "sameAs": [
      {%- for url in club.sameAs %}
        "{{ url }}"{% if not loop.last %},{% endif %}
      {%- endfor %}
    ],
    "foundingDate": {
      "@type": "Date",
      "@value": "{{ club.founded | date(" YYYY ") | trim }}"
    },
    "sport": "Soccer",
    "areaServed": {
      "@type": "AdministrativeArea",
      "name": "{{ club.location.areaServed }}"
    },
    "memberOf": {
      "@type": "SportsOrganization",
      "sport": "Soccer",
      "name": "{{ club.memberOf.name }}",
      "alternateName": "{{ club.memberOf.alternateName }}",
      "url": "{{ club.memberOf.url }}/"
    },
    "location": {
      "@type": "StadiumOrArena",
      "name": "{{ club.location.name }}",
      "maximumAttendeeCapacity": "{{ club.location.maximumAttendeeCapacity }}",
      "priceRange": "££",
      "latitude": "{{ club.location.longitude }}",
      "longitude": "{{ club.location.longitude }}",
      "address": {
        "@type": "PostalAddress",
        {%- if stadium.address.streetAddress %}
          "streetAddress": "{{ club.location.address.streetAddress }}",
        {%- endif %}
        "addressLocality": "{{ club.location.address.addressLocality }}",
        "addressRegion": "{{ club.location.address.addressRegion }}",
        "postalCode": "{{ club.location.address.postalCode }}",
        "addressCountry": {
          "@type": "Country",
          "name": "{{ club.location.address.addressCountry.name }}"
        }
      },
      {%- if ground.id %}
        "image": "https://media.api-sports.io/football/venues/{{ ground.id }}.png",
      {%- endif %}
      {%- if ground.sponsor %}
        "sponsor": {
          "@type": "Organization",
          "name": "{{ club.location.address.addressCounty }}"
        }
      {%- endif %}
    }
  }
</script>

{% set img %}
https://dev.virtualearth.net/REST/v1/Imagery/Map/Aerial/{{ club.location.latitude}},{{ club.location.longitude }}/18?mapSize=1280,800&query={{ club.location.name | urlencode }}&mapLayer=Basemap,Buildings&format=jpeg&mapMetadata=0&key={{ env.bing_maps_api_key }}
{% endset %}
{% set alt %}
An aerial photograph of {{ club.location.name }} in {{ club.location.address.addressLocality }}, {{ club.location.address.addressRegion }}
{% endset %}
{{ hero(club.name, club.location.name, img, alt ) }}

{{ breadcrumb("Leagues", club.memberOf.name, club.name) }}

<section class="section">
  <div class="container is-max-desktop">
    <div class="columns is-8 is-variable">
      <div class="column is-two-thirds">
        <p class="block is-size-5">
          <strong>
            {{ club.alternateName }}
          </strong>
          is an {{ club.sport | lower }} club, based in {{ club.location.address.addressLocality }}
          {%- if club.location.address.addressRegion -%}
            , {{ club.location.address.addressRegion }}
          {%- endif -%}.
        </p>
        <p class="block is-size-6">
          Founded {{ club.foundingDate.@value | ago }} years ago in {{ club.foundingDate.@value}}, the team currently compete in the
          <a href="/leagues/{{ club.memberOf.name | slugify }}">{{ club.memberOf.sponsor.name }}
            {{ club.memberOf.name }}</a>, 
            {%- if club.memberOf.additionalProperty %}
            the {{ club.memberOf.additionalProperty.@value | ordinal }} tier of English football
            {%- endif %}.
        </p>
        <p class="block is-size-6">
          They play their home matches at 
          <a href="/grounds/{{ club.location.areaServed | slugify }}/{{ club.location.name | slugify }}">{{ club.location.name }}</a>,
          and are nicknamed <strong>"{{ club.slogan }}"</strong>.
        </p>
      </div>
      <div class="column is-one-third">
        <figure class="image is-128x128 mb-5">
          {% crest club.logo.contentURL,
          club.logo.caption,
          club.name %}
        </figure>
        <h3 class="heading">Ground</h3>
        <p class="block">
          <a href="/grounds/{{ club.location.areaServed | slugify }}/{{ club.location.name | slugify }}">
            {{ club.location.name }}
          </a>
        </p>
        {% if club.url %}
          <h3 class="heading">Website</h3>
          <p class="block">
            <a href="{{ club.url }}" target="_blank" rel="noopener">{{ club.url.slice(8) }}
              <span class="icon">
                <i class="fas fa-arrow-up-right-from-square"></i>
              </span>
            </a>
          </p>
        {% endif %}
        {% for url in club.sameAs %}
          {% if url.slice(8, 15) == "twitter" %}
            <h3 class="heading">Twitter</h3>
            <p class="block">
              <a href="{{ url }}" target="_blank" rel="noopener">@{{ url.slice(20) | lower }}
                <span class="icon">
                  <i class="fas fa-arrow-up-right-from-square"></i>
                </span>
              </a>
            </p>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<section class="section has-background-light">
  <div class="container is-max-desktop">
    <nav class="level">
      <div class="level-item has-text-centered">
        {% if club.foundingDate %}
          <div>
            <p class="heading">Founded</p>
            <p class="title is-size-4">
              <time datetime="YYYY">{{ club.foundingDate.@value }}</time>
            </p>
          </div>
        {% endif %}
      </div>
      <div class="level-item has-text-centered">
        {% if club.slogan %}
          <div>
            <p class="heading">Nickname</p>
            <p class="title is-size-4">{{ club.slogan }}</p>
          </div>
        {% endif %}
      </div>
      <div class="level-item has-text-centered">
        {% if club.location.maximumAttendeeCapacity %}
          <div>
            <p class="heading">Ground Capacity</p>
            <p class="title is-size-4">{{ club.location.maximumAttendeeCapacity | commaNumber }}</p>
          </div>
        {% endif %}
      </div>
      <div class="level-item has-text-centered">
        {% if club.memberOf.additionalProperty.@value %}
          <div>
            <p class="heading">Tier</p>
            <p class="title is-size-4">{{ club.memberOf.additionalProperty.@value  }}</p>
          </div>
        {% endif %}
      </div>
    </nav>
  </div>
</section>