<main itemscope itemtype="https://schema.org/SportsOrganization"
  class="container mx-auto grid grid-cols-12 gap-x-12 gap-y-8 my-12">
  <page-header :title="league.name" :description="league.description"></page-header>
  <section
    class="col-span-12 grid grid-cols-1 md:grid-cols-2 place-items-stretch lg:grid-cols-4 xl:grid-cols-6 px-4 gap-4 mt-16 mb-32">
    <block-sportsteam webc:for="(club, index) of league.members" :club="club"
      :url="`/leagues/${league.slug.current}/${club.slug.current}/`">
    </block-sportsteam>
  </section>
</main>