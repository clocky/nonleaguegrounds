{
  "name": "nonleaguegrounds-local",
  "version": "1.0.0",
  "description": "Database of British non-league grounds",
  "main": "index.html",
  "scripts": {
    "webhint": "npx hint -c .hintrc https://www.nonleaguegrounds.com",
    "watch:sass": "sass --no-source-map --watch src/sass:dist/css",
    "watch:eleventy": "ELEVENTY_ENV=development eleventy --serve",
    "build:sass": "sass --no-source-map src/sass:dist/css",
    "build:eleventy": "ELEVENTY_ENV=prod eleventy",
    "postbuild": "npm-run-all postbuild:css postbuild:sharp postbuild:compress",
    "start": "npm-run-all build:sass --parallel watch:*",
    "build": "npm-run-all build:sass build:eleventy",
    "postbuild:css": "lightningcss --minify --targets '> 0.25%, not IE 11' dist/css/style.css -o dist/css/style.css",
    "postbuild:sharp": "sharp resize 1280 -i dist/img/*.jpg -o dist/img --optimize",
    "postbuild:compress": "gzipper compress --zopfli --brotli --include js,css,html ./dist"
  },
  "keywords": [
    "football",
    "soccer",
    "uk"
  ],
  "prettier": {
    "singleQuote": false,
    "trailingComma": "es5",
    "tabwidth": 2
  },
  "author": "Mark McLaughlin",
  "license": "MIT",
  "dependencies": {
    "@11ty/eleventy": "^2.0.0-canary.16",
    "@11ty/eleventy-img": "^2.0.1",
    "@11ty/eleventy-plugin-directory-output": "^1.0.1",
    "@fortawesome/fontawesome-free": "^6.2.0",
    "@prettier/plugin-xml": "^2.2.0",
    "@sindresorhus/slugify": "^2.1.1",
    "bulma": "^0.9.4",
    "comma-number": "^2.1.0",
    "dayjs": "^1.11.6",
    "distance-from": "^1.1.2",
    "dotenv": "^16.0.3",
    "eleventy-plugin-purgecss": "^0.3.0",
    "js-yaml": "^4.1.0",
    "lightningcss-cli": "^1.16.0",
    "lunr": "^2.3.9",
    "netlify-plugin-cache": "^1.0.3",
    "ordinal": "^1.0.3",
    "sass": "^1.55.0",
    "tachyons-sass": "^4.9.5",
    "terser": "^5.15.1"
  },
  "devDependencies": {
    "gzipper": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "number-to-words": "^1.2.4",
    "prettier": "^2.7.1",
    "sharp-cli": "^3.0.0"
  }
}
