{
  "name": "nonleaguegrounds-local",
  "version": "1.1.0",
  "description": "Database of British non-league grounds",
  "main": "index.html",
  "scripts": {
    "webhint": "npx hint -c .hintrc https://www.nonleaguegrounds.com",
    "watch:eleventy": "ELEVENTY_ENV=development eleventy --serve",
    "build:eleventy": "ELEVENTY_ENV=production eleventy --quiet",
    "postbuild": "npm-run-all postbuild:css postbuild:sharp",
    "start": "npm-run-all --parallel watch:*",
    "prebuild": "rimraf dist",
    "build": "npm-run-all build:eleventy",
    "postbuild:css": "lightningcss --minify --targets '> 0.25%, not IE 11' dist/css/style*.css -o dist/css/style*.css",
    "postbuild:sharp": "sharp resize 1280 -i dist/img/*.jpg -o dist/img --optimize",
    "postbuild:compress": "gzipper compress --zopfli --brotli --include css,ico,webmanifest ./dist"
  },
  "keywords": [
    "football",
    "soccer",
    "uk"
  ],
  "prettier": {
    "singleQuote": false,
    "trailingComma": "es5",
    "tabwidth": 2
  },
  "author": "Mark McLaughlin",
  "license": "MIT",
  "dependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-fetch": "^3.0.0",
    "@picocss/pico": "^1.5.6",
    "comma-number": "^2.1.0",
    "dayjs": "^1.11.6",
    "distance-from": "^1.1.2",
    "dotenv": "^16.0.3",
    "js-yaml": "^4.1.0",
    "lightningcss-cli": "^1.18.0",
    "netlify-plugin-cache": "^1.0.3",
    "ordinal": "^1.0.3"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^2.2.0",
    "eleventy-plugin-broken-links": "^2.0.3",
    "eleventy-plugin-purgecss": "^0.3.0",
    "eleventy-plugin-rev": "^1.0.2",
    "eleventy-sass": "^2.1.6",
    "gzipper": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^4.1.1",
    "sharp-cli": "^4.1.0"
  }
}
