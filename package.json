{
  "name": "nonleaguegrounds-local",
  "version": "1.4.0",
  "description": "Database of British non-league grounds",
  "main": "index.html",
  "scripts": {
    "start": "run-p dev:*",
    "build": "run-s build:eleventy build:tailwind",
    "build:eleventy": "ELEVENTY_ENV=production eleventy",
    "dev:eleventy": "eleventy --serve --watch --incremental --quiet",
    "build:tailwind": "tailwindcss -i ./src/assets/styles/style.css -o ./dist/css/style.css --postcss --minify",
    "dev:tailwind": "tailwindcss -i ./src/assets/styles/style.css -o ./dist/css/style.css --watch --postcss",
    "postbuild": "run-s prettier validate",
    "prettier": "prettier --write 'dist/**/*.html'",
    "validate": "html-validate --config .htmlvalidate.json dist"
  },
  "keywords": [
    "football",
    "soccer",
    "uk"
  ],
  "author": "Mark McLaughlin",
  "license": "MIT",
  "dependencies": {
    "@sanity/image-url": "^1.0.2",
    "autoprefixer": "^10.4.14",
    "netlify-plugin-cache": "^1.0.3",
    "tailwindcss": "^3.3.2"
  },
  "packageManager": "pnpm@8.1.0",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-img": "^3.1.0",
    "@11ty/eleventy-plugin-webc": "^0.11.1",
    "@sanity/client": "^6.1.3",
    "comma-number": "^2.1.0",
    "dayjs": "^1.11.8",
    "dotenv": "^16.1.4",
    "html-minifier": "^4.0.0",
    "html-validate": "^7.18.1",
    "js-yaml": "^4.1.0",
    "natural": "^6.5.0",
    "npm-run-all": "^4.1.5",
    "number-to-words": "^1.2.4",
    "ordinal": "^1.0.3",
    "prettier": "^2.8.8",
    "prettier-cli": "^0.1.0"
  }
}