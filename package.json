{
  "name": "nonleaguegrounds-local",
  "version": "1.2.0",
  "description": "Database of British non-league grounds",
  "main": "index.html",
  "scripts": {
    "start": "run-p *:dev",
    "build": "run-s eleventy:build vite:build",
    "eleventy:build": "ELEVENTY_ENV=production eleventy",
    "eleventy:dev": "eleventy --watch --incremental",
    "vite:build": "vite build",
    "vite:dev": "vite",
    "postbuild": "npm-run-all -s prettier validate",
    "prettier": "prettier --write 'dist/**/*.html'",
    "validate": "html-validate --config .htmlvalidate.json dist"
  },
  "keywords": [
    "football",
    "soccer",
    "uk"
  ],
  "author": "Mark McLaughlin",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^10.4.14",
    "netlify-plugin-cache": "^1.0.3",
    "tailwindcss": "^3.3.2",
    "vite": "^4.3.7"
  },
  "packageManager": "pnpm@8.1.0",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-img": "^3.1.0",
    "@11ty/eleventy-plugin-webc": "^0.11.1",
    "@sanity/client": "^6.1.1",
    "comma-number": "^2.1.0",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "html-minifier": "^4.0.0",
    "html-validate": "^7.17.0",
    "js-yaml": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "number-to-words": "^1.2.4",
    "ordinal": "^1.0.3",
    "prettier-cli": "^0.1.0"
  }
}