{
  "name": "nonleaguegrounds-local",
  "version": "1.0.0",
  "description": "Database of British non-league grounds",
  "main": "/index.html",
  "scripts": {
    "clean": "rimraf dist",
    "watch:sass": "sass --watch src/_assets/stylesheets/styles.sass dist/css/styles.css",
    "watch:eleventy": "ELEVENTY_ENV=development eleventy --serve --watch --quiet",
    "watch:scripts": "esbuild src/_assets/scripts/app.js --bundle --watch --outfile=dist/js/app.min.js",
    "build:sass": "sass --no-source-map src/_assets/stylesheets/styles.sass dist/css/styles.css",
    "build:eleventy": "ELEVENTY_ENV=production eleventy",
    "build:scripts": "esbuild src/_assets/scripts/app.js --bundle --minify --outfile=dist/js/app.min.js",
    "postbuild": "lightningcss --minify --targets '> 0.25%, not IE 11' dist/css/styles.css -o dist/css/styles.min.css",
    "postbuild:compress": "gzipper compress --zopfli --brotli --include css,ico,webmanifest ./dist",
    "build": "npm-run-all --sequential clean build:*",
    "start": "npm-run-all build:sass --parallel watch:*"
  },
  "keywords": [
    "football",
    "soccer",
    "uk"
  ],
  "prettier": {
    "singleQuote": false,
    "trailingComma": "es5",
    "tabwidth": 2
  },
  "author": "Mark McLaughlin",
  "license": "MIT",
  "dependencies": {
    "@vizuaalog/bulmajs": "^0.12.2",
    "remove": "^0.1.5"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0-canary.18",
    "@11ty/eleventy-fetch": "^3.0.0",
    "@11ty/eleventy-img": "^2.0.1",
    "@prettier/plugin-xml": "^2.2.0",
    "autoprefixer": "^10.4.13",
    "bulma": "^0.9.4",
    "comma-number": "^2.1.0",
    "dayjs": "^1.11.6",
    "distance-from": "^1.1.2",
    "dotenv": "^16.0.3",
    "eleventy-plugin-broken-links": "^2.0.3",
    "eleventy-plugin-purgecss": "^0.3.0",
    "esbuild": "^0.15.16",
    "gzipper": "^7.1.0",
    "html-minifier": "^4.0.0",
    "js-yaml": "^4.1.0",
    "lightningcss-cli": "^1.17.1",
    "netlify-plugin-cache": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "ordinal": "^1.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "sass": "^1.56.1"
  }
}
